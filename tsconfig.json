{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "template",
    "archive/algorithms/process-managment.ts",
    "archive/components/Window.tsx",
    "archive/components/TextField.tsx",
    "archive/colorGenerator.ts"
  ],
  "plugins": [
    {
      "name": "typescript-styled-plugin",
      "tags": ["styled", "css", "sty"]
    }
  ]
}
